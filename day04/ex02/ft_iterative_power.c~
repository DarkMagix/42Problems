#include <unistd.h>

int ft_iterative_power(int nb, int power);

int	ft_iterative_power(int nb, int power)
{
	int i;
	int result;

	i = nb;
	result = 1;
	if ((nb == 0 && power != 0) || power < 0)
		return (0);
	if ((power == 0) || ((nb < 0) && (power == 0)))
		return (1);
	else
	{
		while (power > 0)
		{
			result = nb * result;
			power--;
		}
	}
	return (result);
}
